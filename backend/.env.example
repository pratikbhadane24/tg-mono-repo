# Telegram Service Configuration
# Copy this file to .env and fill in your values

# Telegram Bot API Configuration
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_WEBHOOK_SECRET_PATH=my_secret_webhook_path_12345
BASE_URL=https://your-domain.com

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/telegram

# Stripe Configuration (for platform payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# JWT Configuration
JWT_SECRET_KEY=your-very-secure-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Optional: Invite Link Configuration
INVITE_LINK_TTL_SECONDS=900  # 15 minutes
INVITE_LINK_MEMBER_LIMIT=1

# Optional: Scheduler Configuration
SCHEDULER_INTERVAL_SECONDS=60  # 1 minute

# Optional: Join Model (invite_link or join_request)
JOIN_MODEL=invite_link
